.container {
  padding: 20rpx;
  /* background-color: #f8f8f8; */
}

.title{
  font-size: 36rpx;
  font-weight: bold;
  /* background: #ffffff; */
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  padding: 20rpx;
  /* color: #fff; */
}
.section {
  background: #ffffff;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  padding: 20rpx;
}
.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.list-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
}
.list-item:last-child {
  border-bottom: none;
}
.icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.recommend-tag {
  background: #ff5722;
  color: white;
  font-size: 24rpx;
  padding: 5rpx 10rpx;
  border-radius: 5rpx;
  margin-left: auto;
}


.bg-image {
  position: fixed; 
  top: 0;
  left: 0;
  width: 100%;
  height: 30vh;
  z-index: -1; 
  object-fit: cover;
}

.safe-area{
  margin-top:54px;
}

.collapse-icon{
  height: 14px;
  width: 14px;
  background-color: #f3f3f3;
  padding: 8px;
  border-radius: 22px;
}